{
  "name": "refactored-playwright",
  "version": "1.0.0",
  "description": "Multi-project Playwright testing framework with advanced features",
  "main": "index.js",
  "scripts": {
    "install:all": "pnpm install",
    "setup": "pnpm playwright install --with-deps",
    "test": "playwright test",
    "test:interactive": "tsx src/runner/interactive-runner.ts",
    "test:pcf": "PROJECT=pcf playwright test tests/pcf",
    "test:mss": "PROJECT=mss playwright test tests/mss",
    "test:ilham": "PROJECT=ilham playwright test tests/ilham",
    "test:smoke": "playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report:allure": "allure generate allure-results --clean -o allure-report",
    "report:open": "allure open allure-report",
    "report:serve": "allure serve allure-results",
    "health-check": "node scripts/health-check.js",
    "setup:project": "./scripts/setup-new-project.sh",
    "clean": "rm -rf allure-results/* allure-report/* test-results/* playwright-report/*",
    "lint": "eslint src/ tests/ --ext .ts",
    "lint:fix": "eslint src/ tests/ --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "testing",
    "e2e",
    "automation",
    "typescript",
    "multi-project"
  ],
  "author": "Test Architect",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@inquirer/prompts": "^5.5.0",
    "@playwright/test": "^1.53.0",
    "@types/node": "^20.19.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "allure-commandline": "^2.34.0",
    "allure-playwright": "^3.2.2",
    "chalk": "^5.4.1",
    "dotenv": "^16.5.0",
    "eslint": "^9.29.0",
    "playwright": "^1.53.0",
    "playwright-elements": "^1.18.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
